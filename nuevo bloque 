public InputStream getInputStream() throws IOException {
    return new ClasspathResource(pdfPath.toString()).getInputStream();
}

public void usarInputStream() {
    InputStream is = null;
    try {
        is = getInputStream();
        // Pasar el InputStream a otro método para su uso
        otroMetodo(is);
    } catch (IOException e) {
        // Manejo de excepciones
    } finally {
        // Aquí puedes cerrar el InputStream cuando ya no se necesite
        if (is != null) {
            try {
                is.close();
            } catch (IOException e) {
                // Manejo de excepciones al cerrar el InputStream
            }
        }
    }
}

public void otroMetodo(InputStream is) {
    // Usar el InputStream aquí
}