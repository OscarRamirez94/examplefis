public class InputStreamWrapper implements AutoCloseable {
    private final InputStream is;

    public InputStreamWrapper(String path) throws IOException {
        this.is = new ClasspathResource(path).getInputStream();
    }

    public InputStream getInputStream() {
        return is;
    }

    @Override
    public void close() throws IOException {
        if (is != null) {
            is.close();
        }
    }
}

public InputStreamWrapper getInputStreamWrapper() throws IOException {
    return new InputStreamWrapper(pdfPath.toString());
}

public void usarInputStream() {
    try (InputStreamWrapper wrapper = getInputStreamWrapper()) {
        InputStream is = wrapper.getInputStream();
        // Usa el InputStream aqu√≠
    } catch (IOException e) {
        // Maneja excepciones
    }
}