
List<Map<String, Object>> notifications = (List<Map<String, Object>>) map.get("notifications");

if (notifications != null && !notifications.isEmpty()) {
    String code = (String) notifications.get(0).get("code");
    String message = (String) notifications.get(0).get("message");
    
