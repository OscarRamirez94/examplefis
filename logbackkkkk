import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import ch.qos.logback.classic.LoggerContext;
import ch.qos.logback.core.ConsoleAppender;
import ch.qos.logback.classic.encoder.PatternLayoutEncoder;

public class MiClase {

    private static final Logger logger = LoggerFactory.getLogger(MiClase.class);

    public void metodoConLogModificado() {
        // Cambiar el patrón solo para este método
        modificarLogbackPattern("%d{yyyy-MM-dd HH:mm:ss} - %level - %msg%n");

        // Llamada al código donde los logs tendrán el nuevo patrón
        logger.info("Este es un log con patrón modificado");

        // Resto del código
    }

    public void metodoNormal() {
        // Este método usará el patrón configurado originalmente
        logger.info("Este es un log con el patrón original");
    }

    private void modificarLogbackPattern(String nuevoPatron) {
        // Obtener el contexto de logback
        LoggerContext context = (LoggerContext) LoggerFactory.getILoggerFactory();

        // Obtener el appender de consola
        ConsoleAppender appender = (ConsoleAppender) context.getLogger("ROOT").getAppender("Console");

        // Cambiar el patrón del appender
        PatternLayoutEncoder encoder = (PatternLayoutEncoder) appender.getEncoder();
        encoder.setPattern(nuevoPatron);
        encoder.start();
    }
}