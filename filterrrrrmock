import org.springframework.stereotype.Service;
import java.time.LocalDate;
import java.util.List;
import java.util.stream.Collectors;

@Service
public class AccountDataService {

    public List<AccountData> filtrarPorStatusYFecha(List<AccountData> lista, String status, LocalDate fechaInicio, LocalDate fechaFin) {
        return lista.stream()
                .filter(dato -> dato.getStatus().equalsIgnoreCase(status))
                .filter(dato -> !dato.getFecha().isBefore(fechaInicio) && !dato.getFecha().isAfter(fechaFin))
                .collect(Collectors.toList());
    }
}


--‐- z z z z z z

LocalDate fechaReferencia = LocalDate.now();  // o la fecha que te indiquen
int diasAntes = 3;
int diasDespues = 0;

.stream()
    .filter(dato -> {
        LocalDate fechaDato = dato.getFecha();
        return !fechaDato.isBefore(fechaReferencia.minusDays(diasAntes)) &&
               !fechaDato.isAfter(fechaReferencia.plusDays(diasDespues));
    })
