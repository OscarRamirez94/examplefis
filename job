apiVersion: batch/v1
kind: CronJob
metadata:
  name: call-my-api
spec:
  schedule: "*/30 5-23 * * *"  # cada 30 min desde 5:00 hasta 23:30
  jobTemplate:
    spec:
      template:
        spec:
          containers:
            - name: curl
              image: curlimages/curl:8.6.0
              args:
                - -X
                - GET
                - http://mi-servicio:8080/api/doSomething
          restartPolicy: OnFailure