String safeCif = validateCif(cifDecode);

URI uri = UriComponentsBuilder
            .fromHttpUrl(baasCustomerUrl)  // Host/base fijo (propiedad o constante)
            .pathSegment(safeCif)          // Agregas el parámetro como segmento
            .build()
            .toUri();

ResponseEntity<Map<String, Object>> responseEntity =
        restTemplate.exchange(uri, HttpMethod.GET, body, MAP_PARAMETERIZED_TYPE_REFERENCE);



private String validateCif(String cif) {
    if (cif == null || !cif.matches("[A-Za-z0-9_-]+")) {
        throw new IllegalArgumentException("CIF no válido");
    }
    return cif;
}